<div class="container">

  <%= render "layouts/error", obj: @user %>

  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5">
      <h1>User info</h1>
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :image %><br>
          <%= f.file_field :profile_image, accept:"image/*" %>
        </div>
        <div class="form-group">
          <%= f.label :introduction %>
          <%= f.text_area :introduction, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update User", class:"btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>